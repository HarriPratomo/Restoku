<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baksolapangantembaksenayan">

    <application
        android:allowBackup="true"
        android:icon="@drawable/meatball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/meatball"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Admin.SettingActivity"></activity>
        <activity android:name=".activity.User.DetailOrderItem" />
        <activity android:name=".activity.Admin.DetailOrderAdmin" />
        <activity android:name=".activity.User.EditProfileUser" />
        <activity android:name=".activity.Admin.EditProfileAdmin" />
        <activity android:name=".activity.Admin.EditDataMenu" />
        <activity android:name=".activity.CartActivity" />
        <activity android:name=".activity.Admin.AddProductAdminActivity" />
        <activity android:name=".activity.Admin.MainAdminActivity" />
        <activity android:name=".activity.User.MainUserActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.Admin.RegisterAdmin" />
        <activity android:name=".activity.User.RegisterUser" />

        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>